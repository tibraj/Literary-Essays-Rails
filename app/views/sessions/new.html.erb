
<h1>Login</h1>

<h2><%= flash[:error] %></h2>

<div class="form-group">
<%= form_for(:user) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %><br><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br><br>
    <%= f.submit "Log In", :class => "btn btn-primary" %>
<% end %>

<br><br>

<%= link_to "Back", '/', :class => "btn btn-primary" %>
</div>