
<h2 class="mt-3 mb-5"><strong><%= @essay.title %></strong><h2>
<p><em><%= @essay.content %></em</p><br><br>
<h3>By: <%= @essay.user.name %></h3><br>

<h3><%= link_to "Respond to this Essay", new_essay_response_path(@essay) %><br><br></h3>
<p><%= link_to "Edit Essay", edit_essay_path(@essay), :class => "btn btn-primary" if @essay.user == current_user %><br></p>
<p><%= button_to "Delete Essay", essay_path(@essay), :class => "btn btn-primary", method: :delete if @essay.user == current_user %></p>



<h1 class="mb-3">Responses:</h1>

<% @essay.responses.each do |response| %>
    <ul>
    <li><h3><%= response.content %></h3></li>
    <p class="mb-5">Written by: <%=response.user.name%></p>
    </ul> 
<% end %>


    