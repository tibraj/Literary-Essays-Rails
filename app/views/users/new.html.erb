<%= render partial: 'layouts/errors', locals: {object: @user} %>

<h1>Signup</h1>

<div class="form-group">
<%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br><br>
    <%= f.submit "Sign Up", :class => "btn btn-primary" %>
<% end %>

<br><br>

<%= link_to "Back", '/', :class => "btn btn-primary" %>
</div>